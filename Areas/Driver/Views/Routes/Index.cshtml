@model IEnumerable<ServiceTrackingSystem.Models.Location>

@{
    ViewBag.Title = "Rotalar";
    Layout = "~/Areas/Driver/Pages/Shared/_DriverLayout.cshtml";
}

<div class="container-fluid p-4">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Rotalar</h6>
            
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="routesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>NeighborhoodName</th>
                            <th>DistrictName</th>
                            <th>StreetName</th>
                            <th>DetailedAddress</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.NeighborhoodName</td>
                                <td>@item.DistrictName</td>
                                <td>@item.StreetName</td>
                                <td>@(item.DetailedAddress != null ? item.DetailedAddress : "")</td>
                                <td>
                                    <a href="@Url.Action("Navigate", "Routes", new { area = "Driver", id = item.Id })" class="btn btn-primary btn-sm">
                                        <i class="fas fa-route"></i> Navigasyonu Başlat
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div>
                    <a href="@Url.Action("NavigateAll", "Routes", new { area = "Driver" })" class="btn btn-primary btn-sm mr-2">
                        <i class="fas fa-route"></i> Tüm Rota İçin Navigasyonu Başlat
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#routesTable').DataTable();
        });
    </script>
}
