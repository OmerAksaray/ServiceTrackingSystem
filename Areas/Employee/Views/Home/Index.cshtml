@{
    ViewData["Title"] = "Employee Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-custom mb-4">
                <div class="card-body">
                    <h2 class="card-title text-gradient">Welcome to Employee Dashboard</h2>
                    <p class="card-text">Manage your service operations efficiently from this central dashboard.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-custom h-100">
                <div class="card-body">
                    <h3 class="card-title"><i class="bi bi-geo-alt me-2 text-primary"></i>Addresses</h3>
                    <p class="card-text">Manage customer addresses and service locations.</p>
                    <a asp-area="Employee" asp-controller="Home" asp-action="Addresses" class="btn btn-outline-primary">Manage Addresses</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-custom h-100">
                <div class="card-body">
                    <h3 class="card-title"><i class="bi bi-truck me-2 text-primary"></i>Services</h3>
                    <p class="card-text">Track and manage ongoing service requests.</p>
                    <a href="#" class="btn btn-outline-primary">View Services</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-custom h-100">
                <div class="card-body">
                    <h3 class="card-title"><i class="bi bi-people me-2 text-primary"></i>Drivers</h3>
                    <p class="card-text">Manage driver assignments and schedules.</p>
                    <a href="#" class="btn btn-outline-primary">Manage Drivers</a>
                </div>
            </div>
        </div>
    </div>
</div>
