@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h1 class="display-4">Admin Dashboard</h1>
            <p class="lead">Welcome to the Service Tracking System Admin Area</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-people me-2"></i>Employee Management</h5>
                </div>
                <div class="card-body">
                    <p>Manage employees, their details, and account information.</p>
                    <p>Create, update, or delete employee accounts as needed.</p>
                </div>
                <div class="card-footer bg-white border-0">
                    <a asp-area="Admin" asp-controller="Employees" asp-action="Index" class="btn btn-outline-primary w-100">
                        Manage Employees
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-truck me-2"></i>Driver Management</h5>
                </div>
                <div class="card-body">
                    <p>Manage drivers, their details, and account information.</p>
                    <p>Create, update, or delete driver accounts as needed.</p>
                </div>
                <div class="card-footer bg-white border-0">
                    <a asp-area="Admin" asp-controller="Drivers" asp-action="Index" class="btn btn-outline-success w-100">
                        Manage Drivers
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Route Assignments</h5>
                </div>
                <div class="card-body">
                    <p>Assign drivers to routes and employees to drivers.</p>
                    <p>Manage route schedules and employee allocations.</p>
                </div>
                <div class="card-footer bg-white border-0">
                    <a asp-area="Admin" asp-controller="RouteAssignments" asp-action="Index" class="btn btn-outline-info w-100">
                        Manage Routes
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 