@model ServiceTrackingSystem.Models.Driver

@{
    ViewData["Title"] = "Driver Details";
}

<h1>Driver Details</h1>

<div class="card">
    <div class="card-header">
        <h4>@Model.Name @Model.Surname</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>
                    
                    <dt class="col-sm-4">Surname:</dt>
                    <dd class="col-sm-8">@Model.Surname</dd>
                    
                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                    
                    <dt class="col-sm-4">Phone Number:</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>
                    
                    <dt class="col-sm-4">License Number:</dt>
                    <dd class="col-sm-8">@Model.LicenseNumber</dd>
                    
                    <dt class="col-sm-4">Created Date:</dt>
                    <dd class="col-sm-8">@Model.CreatedDate.ToString("dd/MM/yyyy")</dd>
                    
                    <dt class="col-sm-4">Last Updated:</dt>
                    <dd class="col-sm-8">@Model.UpdatedDate.ToString("dd/MM/yyyy")</dd>
                </dl>
            </div>
            <div class="col-md-6">
                @if (Model.RouteAssignment != null && Model.RouteAssignment.Employees != null && Model.RouteAssignment.Employees.Any())
                {
                    <h5 class="mb-3">Assigned Employees</h5>
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model.RouteAssignment.Employees)
                            {
                                <tr>
                                    <td>@employee.Name</td>
                                    <td>@employee.Surname</td>
                                    <td>@employee.Email</td>
                                    <td>@employee.PhoneNumber</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    
                    <h5 class="mt-3">Route Information</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Route Date:</dt>
                        <dd class="col-sm-8">@Model.RouteAssignment.RouteDate.ToString("dd/MM/yyyy")</dd>
                    </dl>
                }
                else
                {
                    <div class="alert alert-info">
                        <h5 class="alert-heading">No Route Assignment</h5>
                        <p>This driver has no route assignments or employees assigned.</p>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div> 