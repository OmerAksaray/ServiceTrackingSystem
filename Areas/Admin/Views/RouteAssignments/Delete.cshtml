@model ServiceTrackingSystem.Models.RouteAssignment

@{
    ViewData["Title"] = "Delete Route Assignment";
}

<h1>Delete Route Assignment</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this route assignment?</h3>
    <p>This action cannot be undone. Deleting this route assignment will remove all employee associations.</p>
</div>

<div class="card">
    <div class="card-header">
        <h4>Route Assignment #@Model.Id</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Route Date:</dt>
            <dd class="col-sm-9">@Model.RouteDate.ToString("dd/MM/yyyy")</dd>
            
            <dt class="col-sm-3">Driver:</dt>
            <dd class="col-sm-9">
                @if (Model.Driver != null)
                {
                    @($"{Model.Driver.Name} {Model.Driver.Surname}")
                }
                else
                {
                    <span class="text-muted">No driver assigned</span>
                }
            </dd>
            
            <dt class="col-sm-3">Assigned Employees:</dt>
            <dd class="col-sm-9">
                @if (Model.Employees != null && Model.Employees.Any())
                {
                    <span class="badge bg-info">@Model.Employees.Count() Employees</span>
                }
                else
                {
                    <span class="text-muted">No employees assigned</span>
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div> 