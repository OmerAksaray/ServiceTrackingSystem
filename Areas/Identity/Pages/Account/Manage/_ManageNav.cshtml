@using ServiceTrackingSystem.Models
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column">
    <li class="nav-item mb-2">
        <a class="nav-link d-flex align-items-center @ManageNavPages.IndexNavClass(ViewContext) rounded" 
           id="profile" asp-page="./Index" 
           style="transition: all 0.3s ease;" 
           onmouseover="this.style.backgroundColor='rgba(0,123,255,0.1)'" 
           onmouseout="this.style.backgroundColor= this.classList.contains('active') ? '#007bff' : ''">
            <i class="fas fa-user me-2"></i> Profile
        </a>
    </li>
    <li class="nav-item mb-2">
        <a class="nav-link d-flex align-items-center @ManageNavPages.EmailNavClass(ViewContext) rounded" 
           id="email" asp-page="./Email"
           style="transition: all 0.3s ease;" 
           onmouseover="this.style.backgroundColor='rgba(0,123,255,0.1)'" 
           onmouseout="this.style.backgroundColor= this.classList.contains('active') ? '#007bff' : ''">
            <i class="fas fa-envelope me-2"></i> Email
        </a>
    </li>
    <li class="nav-item mb-2">
        <a class="nav-link d-flex align-items-center @ManageNavPages.ChangePasswordNavClass(ViewContext) rounded" 
           id="change-password" asp-page="./ChangePassword"
           style="transition: all 0.3s ease;" 
           onmouseover="this.style.backgroundColor='rgba(0,123,255,0.1)'" 
           onmouseout="this.style.backgroundColor= this.classList.contains('active') ? '#007bff' : ''">
            <i class="fas fa-key me-2"></i> Password
        </a>
    </li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item mb-2">
            <a id="external-login" class="nav-link d-flex align-items-center @ManageNavPages.ExternalLoginsNavClass(ViewContext) rounded" 
               asp-page="./ExternalLogins"
               style="transition: all 0.3s ease;" 
               onmouseover="this.style.backgroundColor='rgba(0,123,255,0.1)'" 
               onmouseout="this.style.backgroundColor= this.classList.contains('active') ? '#007bff' : ''">
                <i class="fas fa-sign-in-alt me-2"></i> External logins
            </a>
        </li>
    }
    <li class="nav-item mb-2">
        <a class="nav-link d-flex align-items-center @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) rounded" 
           id="two-factor" asp-page="./TwoFactorAuthentication"
           style="transition: all 0.3s ease;" 
           onmouseover="this.style.backgroundColor='rgba(0,123,255,0.1)'" 
           onmouseout="this.style.backgroundColor= this.classList.contains('active') ? '#007bff' : ''">
            <i class="fas fa-shield-alt me-2"></i> Two-factor authentication
        </a>
    </li>
    <li class="nav-item mb-2">
        <a class="nav-link d-flex align-items-center @ManageNavPages.PersonalDataNavClass(ViewContext) rounded" 
           id="personal-data" asp-page="./PersonalData"
           style="transition: all 0.3s ease;" 
           onmouseover="this.style.backgroundColor='rgba(0,123,255,0.1)'" 
           onmouseout="this.style.backgroundColor= this.classList.contains('active') ? '#007bff' : ''">
            <i class="fas fa-database me-2"></i> Personal data
        </a>
    </li>
</ul>
